<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5sdp"
    android:fitsSystemWindows="true"
    tools:context="com.loksarkar.activities.ComplaintsList">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:fillViewport="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/LL_mainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LL_firstContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_25sdp"
            android:orientation="vertical">



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:contentPadding="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/name"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/input_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:inputType="text"
                            android:layout_gravity="center"
                            android:paddingStart="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext"
                            android:imeOptions="actionNext"
                            android:hint="@string/name_hint"
                            android:paddingLeft="@dimen/_5sdp" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/address"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/input_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="start|left"
                            android:minLines="4"
                            android:background="@drawable/rounded_editext"
                            android:imeOptions="actionNext"
                            android:hint="@string/address_hint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mobile_no"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />


                        <EditText
                            android:id="@+id/input_mobnum"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="@string/mob_no_hint" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />


                        <EditText
                            android:id="@+id/input_email"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext"
                            android:imeOptions="actionNext"
                            android:hint="@string/email_address_hint" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dob"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />


                        <EditText
                            android:id="@+id/input_dob"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:imeOptions="actionNext"
                            android:hint="@string/dob_hint" />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/LL_IdProof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp">


                        <TextView
                            android:id="@+id/tv_IdProof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/identifiction"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <RadioGroup
                            android:id="@+id/rg_options"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/rb_op1"
                                android:layout_width="wrap_content"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:text="@string/adhar_card"/>

                            <RadioButton
                                android:id="@+id/rb_op2"
                                android:layout_width="wrap_content"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:text="@string/election_card"/>


                            <RadioButton
                                android:id="@+id/rb_op3"
                                android:layout_width="wrap_content"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:text="@string/driving_card"/>

                            <RadioButton
                                android:id="@+id/rb_op4"
                                android:layout_width="wrap_content"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:text="@string/passport_card"/>

                        </RadioGroup>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/id_proof_num"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/input_Id_Proof_Num"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext"
                            android:imeOptions="actionNext"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:hint="@string/identification_hint" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/district"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/rounded_corner_layout">

                            <fr.ganfra.materialspinner.MaterialSpinner
                                android:id="@+id/spinner_district"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_multiline="false"
                                app:ms_hint="@string/district_drop_down_hint"
                                app:ms_enableFloatingLabel="false"
                                app:ms_enableErrorLabel="false"
                                app:ms_floatingLabelText="@string/district_drop_down_hint"
                                app:ms_thickness="0dp"
                                app:ms_alignLabels="true" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/assembly"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/rounded_corner_layout">


                            <fr.ganfra.materialspinner.MaterialSpinner
                                android:id="@+id/spinner_assembly"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_multiline="false"
                                app:ms_hint="@string/assembly_dropdown_hint"
                                app:ms_enableFloatingLabel="false"
                                app:ms_enableErrorLabel="false"
                                app:ms_floatingLabelText="@string/assembly_dropdown_hint"
                                android:layout_marginTop="5dp"
                                app:ms_thickness="0dp"
                                app:ms_alignLabels="true" />

                        </RelativeLayout>

                    </LinearLayout> <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/assembly"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/rounded_corner_layout">


                        <fr.ganfra.materialspinner.MaterialSpinner
                            android:id="@+id/spinner_assembly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ms_multiline="false"
                            app:ms_hint="@string/assembly_dropdown_hint"
                            app:ms_enableFloatingLabel="false"
                            app:ms_enableErrorLabel="false"
                            app:ms_floatingLabelText="@string/assembly_dropdown_hint"
                            android:layout_marginTop="5dp"
                            app:ms_thickness="0dp"
                            app:ms_alignLabels="true" />

                    </RelativeLayout>

                </LinearLayout>



                </LinearLayout>


            </android.support.v7.widget.CardView>


           </LinearLayout>

          <!-- first Header -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/green_rounded_corner_bg"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/txt_title_compaliner_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/compalainer_title_text"
                    android:textSize="15sp"/>

            </RelativeLayout>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/LL_SecondContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_25sdp"

            android:orientation="vertical">



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:contentPadding="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <!-- 2 of 1 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/complain_class_title"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/rounded_corner_layout">


                            <fr.ganfra.materialspinner.MaterialSpinner
                                android:id="@+id/spinner_complain_class_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_multiline="false"
                                app:ms_hint="@string/complain_class_drop_down_hint"
                                app:ms_enableFloatingLabel="false"
                                app:ms_enableErrorLabel="false"
                                app:ms_floatingLabelText="@string/complain_class_drop_down_hint"
                                android:layout_marginTop="5dp"
                                app:ms_thickness="0dp"
                                app:ms_alignLabels="true" />

                        </RelativeLayout>

                    </LinearLayout>


                    <!-- 2 of 2-->
                    <LinearLayout
                        android:id="@+id/LL_complainlevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp">


                        <TextView
                            android:id="@+id/tv_complain_level"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/complain_level_title"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <RadioGroup
                            android:id="@+id/rg_options1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="vertical">


                            <RadioButton
                                android:id="@+id/rb_op2_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/complain_municipal"/>

                            <RadioButton
                                android:id="@+id/rb_op2_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/complain_state"/>


                            <RadioButton
                                android:id="@+id/rb_op2_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/complain_centeral"/>

                        </RadioGroup>

                    </LinearLayout>


                    <!-- 2of 3-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/complain_district_title"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/rounded_corner_layout">


                            <fr.ganfra.materialspinner.MaterialSpinner
                                android:id="@+id/spinner_complain_district"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_multiline="false"
                                app:ms_hint="@string/complain_district_dropdown_title"
                                app:ms_enableFloatingLabel="false"
                                app:ms_enableErrorLabel="false"
                                app:ms_floatingLabelText="@string/complain_district_dropdown_title"
                                android:layout_marginTop="5dp"
                                app:ms_thickness="0dp"
                                app:ms_alignLabels="true" />

                        </RelativeLayout>

                    </LinearLayout>




                    <!-- 2 of 4-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/complain_taluka_title"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/rounded_corner_layout">


                            <fr.ganfra.materialspinner.MaterialSpinner
                                android:id="@+id/spinner_complain_taluka"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_multiline="false"
                                app:ms_hint="@string/complain_taluka_dropdown_title"
                                app:ms_enableFloatingLabel="false"
                                app:ms_enableErrorLabel="false"
                                app:ms_floatingLabelText="@string/complain_taluka_dropdown_title"
                                android:layout_marginTop="5dp"
                                app:ms_thickness="0dp"
                                app:ms_alignLabels="true" />

                        </RelativeLayout>

                    </LinearLayout>

                    <!-- 2 of 5-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/complain_subdept_title"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/rounded_corner_layout">


                            <fr.ganfra.materialspinner.MaterialSpinner
                                android:id="@+id/spinner_complain_dept"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_multiline="false"
                                app:ms_hint="@string/complain_sub_ward_dropdown_titlle"
                                app:ms_enableFloatingLabel="false"
                                app:ms_enableErrorLabel="false"
                                app:ms_floatingLabelText="@string/complain_sub_ward_dropdown_titlle"
                                android:layout_marginTop="5dp"
                                app:ms_thickness="0dp"
                                app:ms_alignLabels="true" />

                        </RelativeLayout>

                    </LinearLayout>
                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        style="@style/Widget.AppCompat.Button"
                        android:shadowColor="@color/btn_color"
                        android:background="@color/btn_color"
                        android:layout_gravity="center"
                        android:text="SUBMIT"

                        android:textColor="@color/white"
                        android:gravity="center"/>

                 </LinearLayout>


            </android.support.v7.widget.CardView>



        </LinearLayout>

            <!-- second Header -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/green_rounded_corner_bg"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/txt_title_complain_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/complain_detail_title"
                    android:textSize="15sp"/>

            </RelativeLayout>


        </RelativeLayout>



        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>