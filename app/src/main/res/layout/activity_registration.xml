                                android:forceHasOverlappingRendering="false"
                                android:overlapAnchor="false"
                                android:dropDownWidth="@dimen/_250sdp"
                                android:gravity="center|center_vertical"
                                android:paddingBottom="1dp"
                                android:paddingTop="@dimen/_5sdp"
