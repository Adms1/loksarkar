                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="@string/passport_card"
                                android:textSize="@dimen/_10sdp"/>

                        </RadioGroup>

                    </LinearLayout>


                    <LinearLayout
