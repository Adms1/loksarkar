                                android:gravity="center|center_vertical"
                                android:paddingBottom="1dp"
                                android:paddingTop="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp"/>

                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
