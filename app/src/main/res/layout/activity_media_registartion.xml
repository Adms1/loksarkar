<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:multi_line_radio_group="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.SignupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/do_media_registartion"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_below="@+id/txt_title"
            android:layout_marginTop="@dimen/_2sdp"/>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:fillViewport="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/LL_firstContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/name"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/input_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:inputType="text"
                            android:layout_gravity="center"
                            android:paddingStart="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext"
                            android:imeOptions="actionNext"
                            android:hint="@string/name_hint"
                            android:paddingLeft="@dimen/_5sdp" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/address"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/input_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="start|left"
                            android:minLines="4"
                            android:background="@drawable/rounded_editext"
                            android:imeOptions="actionNext"
                            android:hint="@string/address_hint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mobile_no"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/input_mobnum"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext"
                            android:hint="@string/mob_no_hint"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/email_label"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />


                        <EditText
                            android:id="@+id/input_email"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext"
                            android:imeOptions="actionNext"
                            android:hint="@string/email_address_hint" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dob"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />


                        <EditText
                            android:id="@+id/input_dob1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:focusable="false"
                            android:editable="false"
                            android:clickable="true"
                            android:background="@drawable/rounded_editext"
                            android:imeOptions="actionNext"
                            android:hint="@string/dob_hint" />


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Facebook link"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />


                        <EditText
                            android:id="@+id/input_fb_link"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext"
                            android:imeOptions="actionNext"
                            android:hint="@string/fb_link_hint" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Twitter link"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />


                        <EditText
                            android:id="@+id/input_twitter_link"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext"
                            android:imeOptions="actionNext"
                            android:hint="@string/twitter_link_hint" />


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/LL_IdProof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:visibility="visible">


                        <TextView
                            android:id="@+id/tv_IdProof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/media_types"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>


                        <com.loksarkar.ui.MultiLineRadioGroup
                            android:id="@+id/rg_options"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            multi_line_radio_group:max_in_row="1"
                            multi_line_radio_group:default_button="National Representative"
                            multi_line_radio_group:radio_buttons="@array/radio_buttons_media_types" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LL_user_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:visibility="visible">


                        <TextView
                            android:id="@+id/tv_user_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/category"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"/>


                        <com.loksarkar.ui.MultiLineRadioGroup
                            android:id="@+id/rg_options1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            multi_line_radio_group:max_in_row="2"
                            multi_line_radio_group:default_button="@string/other"
                            multi_line_radio_group:radio_buttons="@array/radio_buttons_category" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/media_housename"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />


                        <EditText
                            android:id="@+id/input_media_housename"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext"
                            android:imeOptions="actionNext"
                            android:hint="@string/media_housename_hint" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/website_link"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />


                        <EditText
                            android:id="@+id/input_web_link"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext"
                            android:imeOptions="actionNext"
                            android:hint="@string/website_link_hint" />


                    </LinearLayout>


                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        style="@style/Widget.AppCompat.Button"
                        android:shadowColor="@color/btn_color"
                        android:background="@color/btn_color"
                        android:layout_gravity="center"
                        android:text="@string/register"
                        android:textColor="@color/white"
                        android:gravity="center"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>

    </ScrollView>

</android.support.v7.widget.LinearLayoutCompat>