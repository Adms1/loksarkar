<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            android:id="@+id/view_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            app:cardCornerRadius="@dimen/_3sdp"
            app:contentPadding="@dimen/_3sdp"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_alignParentRight="true"
                    android:text="Mon 25 July"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:textColor="@color/text_color_txt" />

                <RelativeLayout
                    android:id="@+id/left_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/LL_ic_container"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">


                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/iv_doc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_cup"
                            android:padding="@dimen/_3sdp"
                            android:tint="@color/metalic_gold" />



                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_index"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="left"
                    android:layout_toLeftOf="@+id/rl_imagecontainer"
                    android:layout_toRightOf="@+id/left_container">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="sahjasjahsjahsjash"
                        android:textColor="@color/text_color_title" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_district"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textColor="@color/text_color_txt" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ref_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ellipsize="marquee"
                        android:layout_toRightOf="@+id/tv_district"
                        android:layout_below="@+id/tv_name"
                        android:textColor="@color/text_color_txt" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_imagecontainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_5sdp">


                    <ImageView
                        android:id="@+id/iv_medal"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:padding="@dimen/_1sdp"
                        android:adjustViewBounds="false"
                        android:visibility="visible"
                        android:src="@drawable/ic_shield" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7000"
                        android:visibility="visible"
                        android:textSize="10sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textColor="@color/white" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_points_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_points"
                        android:layout_alignBottom="@+id/tv_points"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="-10dp"
                        android:gravity="center"
                        android:text="Points"
                        android:textColor="@color/white"
                        android:textSize="7sp"
                        android:visibility="visible" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    <View
        android:id="@+id/view_line"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="@dimen/_15sdp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="@dimen/_27sdp"/>

    </android.support.v7.widget.LinearLayoutCompat>


