<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.loksarkar.activities.Facility"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp">



    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/facility"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_below="@+id/txt_title"
            android:layout_marginTop="@dimen/_2sdp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/iv_airbooking"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/air_booking"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/_5sdp"
            android:adjustViewBounds="true"
            />

        <ImageView
            android:id="@+id/iv_railbooking"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/railway_booking"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/_5sdp"
            android:adjustViewBounds="true" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView

        android:id="@+id/iv_busbooking"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/bus_booking"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/_5sdp"
        android:adjustViewBounds="true" />



        <ImageView
            android:id="@+id/iv_hotelbooking"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/hotel_booking"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/_5sdp"
            android:adjustViewBounds="true" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView

            android:id="@+id/iv_Other"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/other"
            android:layout_margin="@dimen/_5sdp"
            android:adjustViewBounds="true" />

    </LinearLayout>


</LinearLayout>